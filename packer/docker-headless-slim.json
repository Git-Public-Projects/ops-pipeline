{
  "variables": {
    "version": null
  },
  "builders": [
    {
      "type": "docker",
      "image": "docker:dind",
      "commit": true,
      "run_command": [
        "-d",
        "-i",
        "-t",
        "{{.Image}}",
        "/bin/sh"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/alpine_docker_base.sh"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "provision/ansible/playbooks/local.yml"
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/alpine_docker_clean.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "tompscanlan/izanamee-docker-slim",
        "tag": "{{user `version`}}",
        "force": true
      }
    ]
  ]
}