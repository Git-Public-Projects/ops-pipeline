{
  "variables": {
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "org": "tompscanlan",
    "role": "headless",
    "version": null,
    "memory": "512",
    "cpu": "1",
    "headless": "true",
    "ami_ssh_username": "ubuntu",
    "ami_name": "{{user `org`}}/{{user `role`}} {{timestamp}}",
    "ami_instance_type": "t2.micro",
    "ami_region": "us-east-1",
    "ami_ubuntu_source": "ami-d05e75b8",
    "ami_rhel_source": "ami-08cb8762",
    "ami_vpc_id": "vpc-269c2542",
    "ami_security_group_id": "sg-a13db3c7",
    "ami_subnet_id": "subnet-f7d0ebdc",
    "ssh_keypair_name": "",
    "ssh_private_key_file": "ec2.pem"
  },
  "builders": [
    {
      "name": "ubuntu-ami",
      "type": "amazon-ebs",
      "ami_name": "{{user `org`}}/ubuntu-{{user `role`}} {{timestamp}}",
      "instance_type": "{{user `ami_instance_type`}}",
      "region": "{{user `ami_region`}}",
      "source_ami": "{{user `ami_ubuntu_source`}}",
      "ssh_username": "{{user `ami_ssh_username`}}",
      "vpc_id": "{{user `ami_vpc_id`}}",
      "security_group_id": "{{user `ami_security_group_id`}}",
      "subnet_id": "{{user `ami_subnet_id`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "ssh_keypair_name": "{{user `ssh_keypair_name`}}",
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "Latest"
      }
    },
    {
      "name": "centos-ami",
      "type": "amazon-ebs",
      "ami_name": "{{user `org`}}/centos-{{user `role`}} {{timestamp}}",
      "instance_type": "{{user `ami_instance_type`}}",
      "region": "{{user `ami_region`}}",
      "source_ami": "{{user `ami_ubuntu_source`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "vpc_id": "{{user `ami_vpc_id`}}",
      "security_group_id": "{{user `ami_security_group_id`}}",
      "subnet_id": "{{user `ami_subnet_id`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "ssh_keypair_name": "{{{user `ssh_keypair_name`}}",
      "tags": {
        "OS_Version": "Centos",
        "Release": "Latest"
      }
    },
    {
      "name": "rhel-ami",
      "type": "amazon-ebs",
      "ami_name": "{{user `org`}}rhel-{{user `role`}} {{timestamp}}",
      "instance_type": "{{user `ami_instance_type`}}",
      "region": "{{user `ami_region`}}",
      "source_ami": "{{user `ami_rhel_source`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "vpc_id": "{{user `ami_vpc_id`}}",
      "security_group_id": "{{user `ami_security_group_id`}}",
      "subnet_id": "{{user `ami_subnet_id`}}",
      "ssh_private_key_file": "{{user `ssh_private_key_file`}}",
      "ssh_keypair_name": "{{{user `ssh_keypair_name`}}",
      "tags": {
        "OS_Version": "RHEL",
        "Release": "Latest"
      }
    },
    {
      "name": "ubuntu-docker",
      "type": "docker",
      "image": "ubuntu:trusty",
      "commit": true
    },
    {
      "name": "alpine-docker",
      "type": "docker",
      "image": "docker:dind",
      "commit": true,
      "run_command": [
        "-d",
        "-i",
        "-t",
        "{{.Image}}",
        "/bin/sh"
      ]
    },
    {
      "name": "ubuntu-virtualbox",
      "vm_name": "ubuntu-virtualbox",
      "output_directory": "output-ubuntu-virtualbox-ovf",
      "type": "virtualbox-ovf",
      "boot_wait": "10s",
      "source_path": "output-ubuntu-virtualbox/ubuntu-virtualbox-iso.ovf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "headless": "{{user `headless`}}",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpu`}}"
        ]
      ]
    },
    {
      "name": "ubuntu-vmware",
      "vm_name": "ubuntu-vmware",
      "type": "vmware-vmx",
      "output_directory": "output-ubuntu-vmware-vmx",
      "boot_wait": "10s",
      "source_path": "output-ubuntu-vmware/ubuntu-vmware-iso.vmx",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "{{.Flavor}}.iso",
      "headless": "{{user `headless`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpu`}}",
        "mks.3denable": false
      }
    },
    {
      "communicator": "ssh",
      "ssh_pty": true,
      "name": "centos-virtualbox",
      "vm_name": "centos-virtualbox",
      "type": "virtualbox-ovf",
      "output_directory": "output-centos-virtualbox-ovf",
      "boot_wait": "10s",
      "source_path": "output-centos-virtualbox/centos-virtualbox-iso.ovf",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo '{{user `ssh_password`}}'|sudo -S sh 'shutdown.sh'",
      "headless": "{{user `headless`}}",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpu`}}"
        ]
      ]
    },
    {
      "communicator": "ssh",
      "ssh_pty": true,
      "name": "centos-vmware",
      "vm_name": "centos-vmware",
      "type": "vmware-vmx",
      "output_directory": "output-centos-vmware-vmx",
      "boot_wait": "10s",
      "source_path": "output-centos-vmware/centos-vmware-iso.vmx",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo '{{user `ssh_password`}}'|sudo -S sh 'shutdown.sh'",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "{{.Flavor}}.iso",
      "headless": "{{user `headless`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpu`}}",
        "mks.3denable": false
      }
    }
  ],
  "provisioners": [
   {
      "type": "shell",
      "scripts": [
        "packer/scripts/base_setup.sh"
      ],
      "environment_vars": [
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "only": [
        "alpine-docker"
      ]
    },
   {
      "type": "shell",
      "inline": [
        "mkdir -p /packer-files"
      ],
      "only": [
        "ubuntu-docker",
        "alpine-docker"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "json": {
        "http_proxy": "{{user `http_proxy`}}",
        "https_proxy": "{{user `https_proxy`}}",
        "ftp_proxy": "{{user `ftp_proxy`}}",
        "no_proxy": "{{user `no_proxy`}}"
      },
      "run_list": [
        "recipe[chef_solo_proxy]"
      ],
      "except": [
        "ubuntu-docker",
        "alpine-docker"
        ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "run_list": [
        "role[izanamee-{{user `role`}}]"
      ],
      "only": [
        "ubuntu-virtualbox",
        "ubuntu-vmware",
        "centos-virtualbox",
        "centos-vmware",
        "ubuntu-ami",
        "centos-ami",
        "rhel-ami"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/base_docker_setup_ubuntu.sh"
      ],
      "only": [
        "ubuntu-docker"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "run_list": [
        "role[docker-izanamee-{{user `role`}}]"
      ],
      "only": [
        "ubuntu-docker"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/alpine_docker_base.sh"
      ],
      "only": [
        "alpine-docker"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "provision/ansible/playbooks/local.yml",
      "only": [
        "alpine-docker"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/alpine_docker_clean.sh"
      ],
      "only": [
        "alpine-docker"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/ami_setup_ubuntu.sh"
      ],
      "only": [
        "ubuntu-ami"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/shrink_ubuntu.sh"
      ],
      "only": [
        "ubuntu-vmware",
        "ubuntu-virtualbox",
        "ubuntu-ami"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "json": {
        "http_proxy": null,
        "https_proxy": null,
        "ftp_proxy": null,
        "no_proxy": null
      },
      "run_list": [
        "recipe[chef_solo_proxy]"
      ],
      "except": [
        "ubuntu-docker",
        "alpine-docker"
        ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `org`}}-{{user `role`}}-{{.BuildName}}-{{user `version`}}.box",
      "keep_input_artifact": true,
      "only": [
        "centos-virtualbox",
        "centos-vmware",
        "ubuntu-virtualbox",
        "ubuntu-vmware"
      ]
    },
    {
      "type": "docker-tag",
      "repository": "{{user `org`}}/ubuntu-{{user `role`}}",
      "tag": "{{user `version`}}",
      "force": true,
      "only": [
        "ubuntu-docker"
      ]
    },
    {
      "type": "docker-save",
      "path": "{{user `org`}}-ubuntu-{{user `role`}}-{{user `version`}}.tar",
      "only": [
        "ubuntu-docker"
      ]
    },
    {
      "type": "docker-tag",
      "repository": "{{user `org`}}/alpine-{{user `role`}}",
      "tag": "{{user `version`}}",
      "force": true,
      "only": [
        "alpine-docker"
      ]
    },
    {
      "type": "docker-save",
      "path": "{{user `org`}}-alpine-{{user `role`}}-{{user `version`}}.tar",
      "only": [
        "alpine-docker"
      ]
    }
  ],
  "push": {
    "name": "{{user `org`}}/{{user `role`}}",
    "base_dir": "../",
    "exclude": [
      ".vagrant",
      ".git",
      "Vagrantfile",
      "Vagrantfiles/*",
      "*.box",
      "packer_cache/*",
      "output-*/*",
      "base-*/*",
      "jenkins",
      ".kitchen/*",
      ".vagrant/*",
      "xxx/*"
    ]
  }
}
