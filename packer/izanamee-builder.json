{
  "variables": {
    "username": null,
    "password": null,
    "email": null,
    "version": "latest"
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:trusty",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/ubuntu_docker_base.sh"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "run_list": [
        "role[docker-builder]"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/ubuntu_shrink.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "tompscanlan/izanamee-builder",
        "tag": "{{user `version`}}",
        "force": true

      }
    ]
  ]
}
