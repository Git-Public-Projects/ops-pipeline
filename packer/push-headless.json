{
  "variables": {
    "atlas_token": "{{env `ATLAS_TOKEN`}}",
    "version": "0.49",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "org": "tompscanlan",
    "role": "headless",
    "memory": "512",
    "cpu": "1",
    "headless": "true",
    "ami_ssh_username": "ubuntu",
    "ami_name": "{{user `org`}}/{{user `role`}} {{timestamp}}",
    "ami_instance_type": "t2.micro",
    "ami_region": "us-east-1",
    "ami_ubuntu_source": "ami-d05e75b8",
    "ami_vpc_id": "vpc-269c2542",
    "ami_security_group_id": "sg-a13db3c7",
    "ami_subnet_id": "subnet-f7d0ebdc",
    "disk_size": "20000",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ubuntu_iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
    "ubuntu_iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
    "ubuntu_iso_checksum_type": "md5",
    "centos_iso_url": "http://mirror.umd.edu/centos/6.7/isos/x86_64/CentOS-6.7-x86_64-minimal.iso",
    "centos_iso_checksum": "9381a24b8bee2fed0c26896141a64b69",
    "centos_iso_checksum_type": "md5",
    "docker_repo_username": "",
    "docker_repo_password": "",
    "docker_repo_server": "",
    "docker_repo_email": ""
  },
  "builders": [
    {
      "name": "ubuntu-ami",
      "type": "amazon-ebs",
      "ami_name": "{{user `org`}}/ubuntu-{{user `role`}} {{timestamp}}",
      "instance_type": "{{user `ami_instance_type`}}",
      "region": "{{user `ami_region`}}",
      "source_ami": "{{user `ami_ubuntu_source`}}",
      "ssh_username": "{{user `ami_ssh_username`}}",
      "vpc_id": "{{user `ami_vpc_id`}}",
      "security_group_id": "{{user `ami_security_group_id`}}",
      "subnet_id": "{{user `ami_subnet_id`}}",
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "Latest"
      }
    },
    {
      "name": "centos-ami",
      "type": "amazon-ebs",
      "ami_name": "{{user `org`}}/centos-{{user `role`}} {{timestamp}}",
      "instance_type": "{{user `ami_instance_type`}}",
      "region": "{{user `ami_region`}}",
      "source_ami": "{{user `ami_ubuntu_source`}}",
      "ssh_username": "{{user `ami_ssh_username`}}",
      "vpc_id": "{{user `ami_vpc_id`}}",
      "security_group_id": "{{user `ami_security_group_id`}}",
      "subnet_id": "{{user `ami_subnet_id`}}",
      "tags": {
        "OS_Version": "CentOS",
        "Release": "Latest"
      }
    },
    {
      "name": "ubuntu-virtualbox",
      "type": "virtualbox-iso",
      "output_directory": "base-virtualbox",
      "vm_name": "packer-virtualbox-iso",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "packer/http",
      "iso_checksum": "{{user `ubuntu_iso_checksum`}}",
      "iso_checksum_type": "{{user `ubuntu_iso_checksum_type`}}",
      "iso_url": "{{user `ubuntu_iso_url`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "headless": "{{user `headless`}}",
      "disk_size": "{{user `disk_size`}}",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpu`}}"
        ]
      ]
    },
    {
      "name": "ubuntu-vmware",
      "type": "vmware-iso",
      "output_directory": "base-vmware",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "ubuntu-64",
      "http_directory": "packer/http",
      "iso_checksum": "{{user `ubuntu_iso_checksum`}}",
      "iso_checksum_type": "{{user `ubuntu_iso_checksum_type`}}",
      "iso_url": "{{user `ubuntu_iso_url`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "tools_upload_flavor": "linux",
      "tools_upload_path": "{{.Flavor}}.iso",
      "headless": "{{user `headless`}}",
      "disk_size": "{{user `disk_size`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpu`}}",
        "mks.3denable": false
      }
    },
    {
      "name": "centos-virtualbox",
      "vm_name": "centos-virtualbox-iso",
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "RedHat_64",
      "http_directory": "packer/http",
      "iso_checksum": "{{user `centos_iso_checksum`}}",
      "iso_checksum_type": "{{user `centos_iso_checksum_type`}}",
      "iso_url": "{{user `centos_iso_url`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_pty": true,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo '{{user `ssh_password`}}'|sudo -S sh 'shutdown.sh'",
      "headless": "{{user `headless`}}",
      "disk_size": "{{user `disk_size`}}",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpu`}}"
        ]
      ]
    },
    {
      "name": "centos-vmware",
      "vm_name": "centos-vmware-iso",
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "guest_os_type": "centos-64",
      "http_directory": "packer/http",
      "iso_checksum": "{{user `centos_iso_checksum`}}",
      "iso_checksum_type": "{{user `centos_iso_checksum_type`}}",
      "iso_url": "{{user `centos_iso_url`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_pty": true,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo '{{user `ssh_password`}}'|sudo -S sh 'shutdown.sh'",
      "headless": "{{user `headless`}}",
      "disk_size": "{{user `disk_size`}}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `memory`}}",
        "numvcpus": "{{user `cpu`}}",
        "mks.3denable": false
      }
    },
    {
      "name": "ubuntu-docker",
      "type": "docker",
      "image": "ubuntu:trusty",
      "commit": true
    },
    {
      "name": "alpine-docker",
      "type": "docker",
      "image": "docker:dind",
      "commit": true,
      "run_command": [
        "-d",
        "-i",
        "-t",
        "{{.Image}}",
        "/bin/sh"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/base_setup_ubuntu.sh"
      ],
      "only": [
        "ubuntu-virtualbox",
        "ubuntu-vmware"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/base_setup_centos.sh"
      ],
      "only": [
        "centos-virtualbox",
        "centos-vmware"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/base_docker_setup_ubuntu.sh"
      ],
      "only": [
        "ubuntu-docker"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "json": {
        "http_proxy": "{{user `http_proxy`}}",
        "https_proxy": "{{user `https_proxy`}}",
        "ftp_proxy": "{{user `ftp_proxy`}}",
        "no_proxy": "{{user `no_proxy`}}"
      },
      "run_list": [
        "recipe[chef_solo_proxy]"
      ],
      "except": [
        "alpine-docker"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "run_list": [
        "role[izanamee-{{user `role`}}]"
      ],
      "except": [
        "alpine-docker",
        "ubuntu-docker"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "run_list": [
        "role[docker-izanamee-{{user `role`}}]"
      ],
      "only": [
        "ubuntu-docker"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/alpine_docker_base.sh"
      ],
      "only": [
        "alpine-docker"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "provision/ansible/playbooks/local.yml",
      "only": [
        "alpine-docker"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/alpine_docker_clean.sh"
      ],
      "only": [
        "alpine-docker"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/ami_setup_ubuntu.sh"
      ],
      "only": [
        "ubuntu-ami"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/shrink_ubuntu.sh"
      ],
      "only": [
        "ubuntu-vmware",
        "ubuntu-virtualbox",
        "ubuntu-ami"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "packer/scripts/clean_centos.sh"
      ],
      "only": [
        "centos-vmware",
        "centos-virtualbox"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": [
        "provision/chef/cookbooks",
        "provision/chef/vendor-cookbooks"
      ],
      "data_bags_path": "provision/chef/data_bags",
      "roles_path": "provision/chef/roles",
      "json": {
        "http_proxy": null,
        "https_proxy": null,
        "ftp_proxy": null,
        "no_proxy": null
      },
      "run_list": [
        "recipe[chef_solo_proxy]"
      ],
      "except": [
        "alpine-docker"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "{{user `org`}}-{{user `role`}}-{{.BuildName}}-{{user `version`}}.box",
        "keep_input_artifact": true,
        "only": [
          "centos-virtualbox",
          "centos-vmware",
          "ubuntu-virtualbox",
          "ubuntu-vmware"
        ]
      },
      {
        "token": "{{user `atlas_token`}}",
        "type": "atlas",
        "only": [
          "centos-vmware"
        ],
        "artifact": "{{user `org`}}/{{user `role`}}-centos",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "vmware_desktop",
          "version": "{{user `version`}}"
        }
      },
      {
        "token": "{{user `atlas_token`}}",
        "type": "atlas",
        "only": [
          "ubuntu-vmware"
        ],
        "artifact": "{{user `org`}}/{{user `role`}}-ubuntu",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "vmware_desktop",
          "version": "{{user `version`}}"
        }
      },
      {
        "token": "{{user `atlas_token`}}",
        "type": "atlas",
        "only": [
          "ubuntu-virtualbox"
        ],
        "artifact": "{{user `org`}}/{{user `role`}}-ubuntu",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "{{user `version`}}"
        }
      },
      {
        "token": "{{user `atlas_token`}}",
        "type": "atlas",
        "only": [
          "centos-virtualbox"
        ],
        "artifact": "{{user `org`}}/{{user `role`}}-centos",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "{{user `version`}}"
        }
      }
    ],
    [
      {
        "type": "docker-tag",
        "repository": "{{user `org`}}/ubuntu-{{user `role`}}",
        "tag": "{{user `version`}}",
        "force": true,
        "only": [
          "ubuntu-docker"
        ]
      },
      {
        "type": "docker-push",
        "login": true,
        "login_email": "{{user `docker_repo_email`}}",
        "login_username": "{{user `docker_repo_username`}}",
        "login_password": "{{user `docker_repo_password`}}",
        "login_server": "{{user `docker_repo_server`}}",
        "only": [
          "ubuntu-docker"
        ]
      },
      {
        "type": "docker-save",
        "path": "{{user `org`}}-ubuntu-{{user `role`}}-{{user `version`}}.tar",
        "only": [
          "ubuntu-docker"
        ]
      }
    ],
    [
      {
        "type": "docker-tag",
        "repository": "{{user `org`}}/alpine-{{user `role`}}",
        "tag": "{{user `version`}}",
        "force": true,
        "only": [
          "alpine-docker"
        ]
      },
      {
        "type": "docker-push",
        "login": true,
        "login_email": "{{user `docker_repo_email`}}",
        "login_username": "{{user `docker_repo_username`}}",
        "login_password": "{{user `docker_repo_password`}}",
        "login_server": "{{user `docker_repo_server`}}",
        "only": [
          "alpine-docker"
        ]
      },
      {
        "type": "docker-save",
        "path": "{{user `org`}}-alpine-{{user `role`}}-{{user `version`}}.tar",
        "only": [
          "alpine-docker"
        ]
      }
    ]
  ],
  "push": {
    "name": "{{user `org`}}/{{user `role`}}",
    "base_dir": "../",
    "exclude": [
      ".vagrant",
      ".git",
      "Vagrantfile",
      "Vagrantfiles/*",
      "*.box",
      "packer_cache/*",
      "output-*/*",
      "base-*/*",
      "jenkins",
      ".kitchen/*",
      ".vagrant/*",
      "xxx/*"
    ]
  }
}